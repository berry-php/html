{
    "name": "berry/html",
    "description": "Berry is a zero-dependency, type-safe toolkit for building HTML structures using pure PHP.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Berry\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/Html/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Berry\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "gen-functions": "php bin/gen-functions",
        "test": "php vendor/bin/pest",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/pest --coverage",
        "bench": "php vendor/bin/phpbench run tests/Benchmark --report=aggregate"
    },
    "authors": [
        {
            "name": "Christopher Kaster",
            "email": "me@atomicptr.de"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "pestphp/pest": "^4.2",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "psr/http-message": "^2.0",
        "phpbench/phpbench": "^1.4"
    },
    "suggest": {
        "psr/http-message": "Allows using the PsrStreamRenderer"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
